		"esm-env": "^1.0.0",
		"postcss": "^8.4.24",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"rollup-plugin-wit-component": "^0.2.0",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.0.0",
